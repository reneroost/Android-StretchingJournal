<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tekstivaade_aeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="64sp"
        android:text="@string/test_tekst"/>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:weightSum="9"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/nupp_alusta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            style="?android:attr/buttonBarPositiveButtonStyle"
            android:textSize="24sp"
            android:text="@string/alusta"/>

        <Button
            android:id="@+id/nupp_peatu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            style="?android:attr/buttonBarNegativeButtonStyle"
            android:textSize="24sp"
            android:text="@string/peatu"/>

        <Button
            android:id="@+id/nupp_nulli"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            style="?android:attr/buttonBarNeutralButtonStyle"
            android:textSize="24sp"
            android:text="@string/nulli"/>

    </TableRow>

</LinearLayout>